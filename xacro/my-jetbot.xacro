/>

<xacro:standoff
    name ="standoff4"
    radius = "0.0025"
    length = "0.0393"
    mass = "0.5"
    parent = "base_link"
    joint_origin_xyz = "-0.06277 -0.042975 0.01975"
/>

<!-- level 2 -->
<xacro:base-plate
    name = "level2"
    parent = "standoff2"
    joint_origin_xyz = "-0.06277 -0.04275 0.02125"
/>

<xacro:standoff
    name ="standoff5"
    radius = "0.0025"
    length = "0.081"
    mass = "0.5"
    parent = "level2_link"
    joint_origin_xyz = "-0.06277 0.042975 0.01975"
/>

<xacro:standoff
    name ="standoff6"
    radius = "0.0025"
    length = "0.081"
    mass = "0.5"
    parent = "level2_link"
