/>

<!-- level 3 -->
<xacro:base-plate
    name = "level3"
    parent = "standoff6"
    joint_origin_xyz = "-0.06277 -0.04275 0.039"
/>

<xacro:wheel
    name = "left_wheel"
    parent = "base_link"
    joint_origin_xyz = "0.047135 0.05625 0.008125"
/>

<xacro:wheel
    name = "right_wheel"
    parent = "base_link"
    joint_origin_xyz = "0.047135 -0.05625 0.008125"
/>

</robot>
