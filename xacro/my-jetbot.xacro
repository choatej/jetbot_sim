/>

<xacro:standoff
    name ="standoff7"
    radius = "0.0025"
    length = "0.081"
    mass = "0.5"
    parent = "level2_link"
    joint_origin_xyz = "0.06277 -0.042975 0.01975"
/>

<xacro:standoff
    name ="standoff8"
    radius = "0.0025"
    length = "0.081"
    mass = "0.5"
    parent = "level2_link"
