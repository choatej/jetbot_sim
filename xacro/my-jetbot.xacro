<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="jetbot">

    <xacro:include filename="$(find jetbot_sim)/xacro/standoff.xacro"/>
    <xacro:include filename="$(find jetbot_sim)/xacro/wheel.xacro"/>
    <xacro:include filename="$(find jetbot_sim)/xacro/base-plate.xacro"/>
    <xacro:include filename="$(find jetbot_sim)/xacro/ydlidar.xacro"/>
    <xacro:include filename="$(find jetbot_sim)/xacro/camera.xacro"/>
    <xacro:include filename="$(find jetbot_sim)/xacro/imu.xacro"/>

    <!-- odom, so base_link can have inertia -->
    <link name="odom"/>

    <!-- robot base -->
    <xacro:base-plate
        name = "base"
        parent = "odom"
        joint_origin_xyz = "0 0 0.043"
    />

    <xacro:standoff
        name ="standoff1"
        radius = "0.0025"
        length = "0.0393"
        mass = "0.5"
        parent = "base_link"
        joint_origin_xyz = "-0.06277 0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff2"
        radius = "0.0025"
        length = "0.0393"
        mass = "0.5"
        parent = "base_link"
        joint_origin_xyz = "0.06277 0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff3"
        radius = "0.0025"
        length = "0.0393"
        mass = "0.5"
        parent = "base_link"
        joint_origin_xyz = "0.06277 -0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff4"
        radius = "0.0025"
        length = "0.0393"
        mass = "0.5"
        parent = "base_link"
        joint_origin_xyz = "-0.06277 -0.042975 0.01975"
    />

    <!-- level 2 -->
    <xacro:base-plate
        name = "level2"
        parent = "standoff2"
        joint_origin_xyz = "-0.06277 -0.04275 0.02125"
    />

    <xacro:standoff
        name ="standoff5"
        radius = "0.0025"
        length = "0.081"
        mass = "0.5"
        parent = "level2_link"
        joint_origin_xyz = "-0.06277 0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff6"
        radius = "0.0025"
        length = "0.081"
        mass = "0.5"
        parent = "level2_link"
        joint_origin_xyz = "0.06277 0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff7"
        radius = "0.0025"
        length = "0.081"
        mass = "0.5"
        parent = "level2_link"
        joint_origin_xyz = "0.06277 -0.042975 0.01975"
    />

    <xacro:standoff
        name ="standoff8"
        radius = "0.0025"
        length = "0.081"
        mass = "0.5"
        parent = "level2_link"
        joint_origin_xyz = "-0.06277 -0.042975 0.01975"
    />

    <!-- level 3 -->
    <xacro:base-plate
        name = "level3"
        parent = "standoff6"
        joint_origin_xyz = "-0.06277 -0.04275 0.039"
    />

    <xacro:wheel
        name = "left_wheel"
        parent = "base_link"
        joint_origin_xyz = "0.047135 0.0625 -0.008125"
    />

    <xacro:wheel
        name = "right_wheel"
        parent = "base_link"
        joint_origin_xyz = "0.047135 -0.0625 -0.008125"
    />

    <xacro:standoff
        name = "standoff9"
        radius = "0.0025"
        length = "0.0245"
        mass = "0.1"
        parent = "base_link"
        joint_origin_xyz = "-0.05477 0.02 -0.01375"
    />

    <xacro:standoff
        name = "standoff10"
        radius = "0.0025"
        length = "0.0245"
        mass = "0.1"
        parent = "base_link"
        joint_origin_xyz = "-0.05477 -0.02 -0.01375"
    />

    <link name="caster_plate_link">
        <visual>
          <geometry>
            <box size="0.023 0.05 0.008"/>
          </geometry>
        </visual>
        <collision>
          <geometry>
            <box size="0.023 0.01 0.008"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0.5"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <inertia ixx="0.0008333333333333335" ixy="0" ixz="0" iyy="0.0008333333333333335" iyz="0" izz="0.0008333333333333335"/>
        </inertial>
    </link>

    <joint name="caster_plate_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.02 -0.0165" />
        <parent link="standoff10" />
        <child link="caster_plate_link" />
    </joint>

    <link name="caster_ball_link">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <sphere radius="0.0075"/>
          </geometry>
          <material name="silver">
            <color rgba="0.75 0.75 0.75 1.0"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <sphere radius="0.0075"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0.01"/>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>
    </link>

    <joint name="caster_ball_roll_joint" type="continuous">
        <parent link="caster_plate_link"/>
        <child link="caster_ball_link"/>
        <!-- <origin rpy="0 0 0" xyz="-0.055 0 -0.0115"/> -->
        <origin rpy="0 0 0" xyz="0 0 -0.0115"/>
        <axis xyz="1 0 0" />
    </joint>

    <link name="caster_ball_pitch_link" />

    <joint name="caster_ball_pitch_joint" type="continuous">
        <parent link="caster_ball_link"/>
        <child link="caster_ball_pitch_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="caster_ball_yaw_link" />

    <joint name="caster_ball_yaw_joint" type="continuous">
        <parent link="caster_ball_pitch_link"/>
        <child link="caster_ball_yaw_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <xacro:standoff
        name = "standoff11"
        radius = "0.0025"
        length = "0.033"
        mass = "0.1"
        parent = "level3_link"
        joint_origin_xyz = "-0.05977 -0.0315 0.018"
    />

    <xacro:standoff
        name = "standoff12"
        radius = "0.0025"
        length = "0.033"
        mass = "0.1"
        parent = "level3_link"
        joint_origin_xyz = "-0.05977 0.0315 0.018"
    />

    <xacro:standoff
        name = "standoff13"
        radius = "0.0025"
        length = "0.033"
        mass = "0.1"
        parent = "level3_link"
        joint_origin_xyz = "-0.00477 -0.0315 0.018"
    />

    <xacro:standoff
        name = "standoff14"
        radius = "0.0025"
        length = "0.033"
        mass = "0.1"
        parent = "level3_link"
        joint_origin_xyz = "-0.00477 0.0315 0.018"
    />

    <xacro:ydlidar
        name = "primary"
        parent = "standoff14"
        joint_origin_xyz = "-0.01 -0.032 0.0215"
    />

    <link name="camera_plate_link">
        <visual>
          <geometry>
            <box size="0.022 0.072 0.003"/>
          </geometry>
        </visual>
        <collision>
          <geometry>
            <box size="0.022 0.072 0.003"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0.5"/>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <inertia ixx="0.0008333333333333335" ixy="0" ixz="0" iyy="0.0008333333333333335" iyz="0" izz="0.0008333333333333335"/>
        </inertial>
    </link>

    <joint name="camera_plate_joint" type="fixed">
        <origin rpy="0 -1 0" xyz="0.075 0 0.01" />
        <parent link="level2_link" />
        <child link="camera_plate_link" />
      </joint>

      <gazebo reference="camera_plate_link">
        <material>Gazebo/Black</material>
      </gazebo>

    <xacro:camera
        name = "front_camera"
        parent = "camera_plate_link"
        joint_origin_xyz = "0 -0.018 -0.002"
        joint_origin_rpy = "0 0 0"
    />

    <xacro:imu
        name = "default"
        parent = "level3_link"
        joint_origin_xyz = "0 -0.03975 0.02"
        joint_origin_rpy = "0 0 0"
    />
</robot>
